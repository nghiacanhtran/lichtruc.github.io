{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": ["plugin:prettier/recommended"],

  "plugins": ["prettier"],

  "rules": {
    "prettier/prettier": "error",
    "no-dupe-args": "error",
    "curly": "error",
    "for-direction": "error",
    "no-extra-semi": "error",
    "valid-typeof": "error",
    "block-scoped-var": "error",
    "eqeqeq": "error",
    "no-loop-func": "error",
    "no-redeclare": "error"
  }
}
